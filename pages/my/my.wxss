/* pages/my/my.wxss */
.root{
  width: 100%;
  height: 1000rpx;
  background-color: #e6e6e6;
}
/* header 高度260 */ 
.header{
    width: 100%;
    height: 260rpx;
    display: flex;
    flex-direction: row;
    background-color: #fff;
}
.user-logo{
    width: 200rpx;
    height: 200rpx;
    margin: 30rpx;
    border-radius: 50%;
}
.user-info{
  width: 500rpx;
  /* background-color: blue; */
}
.user-name{
  text-align: center;
  line-height: 250rpx;
  margin-left: 30rpx;
}
.user-set{
  position: relative;
  left: 250rpx;
}

/* content */
.content{
  /* background-color: burlywood; */
  height: auto;
  margin-top: 50rpx;
  background-color: #fff;
}
.content-item{
  height: 100rpx;
  line-height: 110rpx;
  font-size: 35rpx;
  padding-left: 50rpx;
  border-bottom: rgb(187, 180, 172) 3rpx solid;
}

/* footer*/
.footer{
  margin: auto;
  margin-top: 50rpx;
  background-color: #fff;
  text-align: center;
  line-height: 110rpx;
  position: relative;
  bottom: -400rpx;
  border-bottom: rgb(187, 180, 172) 3rpx solid;
}
.footer:active{
  background-color: #fff666;
}